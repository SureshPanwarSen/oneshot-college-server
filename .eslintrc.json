{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-console": "off",
    "no-unused-vars": "off",
    "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
    "consistent-return": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
    "no-await-in-loop": "off"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}
